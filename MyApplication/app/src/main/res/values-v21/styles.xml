<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="AppTheme.Base">

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@android:transition/slide_bottom</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>

        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary" type="color">#5F8454</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark" type="color">#375E2C</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent" type="color">#783841</item>
    </style>
</resources>
