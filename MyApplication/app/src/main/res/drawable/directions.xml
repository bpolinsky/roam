<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:endColor="@color/green500"
                    android:startColor="@color/green500"
                    android:angle="270" />
                <stroke
                    android:width="3dp"
                    android:color="@color/green500" />
                <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
            </shape>
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
        </shape>
    </item>

    <item>

        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:endColor="@color/green500"
                android:startColor="@color/green500"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/green500" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>


</selector>

